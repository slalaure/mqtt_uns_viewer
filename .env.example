    {"id":"broker_1","host":"demo.flashmq.org","port":8883,"protocol":"mqtts","clientId":"my-web-visualizer-app","username":"","password":"","topics":["#"],"certFilename":"","keyFilename":"","caFilename":"flashmq-ca.crt","alpnProtocol":"","rejectUnauthorized":true}
